extends layout 

block content 
    form(id='form' method='post' action='/login')
        <p class="formLabel">Email 
            input(type='text' name='email')
        </p>
        <p class="formLabel">Password 
            input(type='text' name='password')
        </p>
        p(id='failedLogin')=failedLogin
        p 
            input(type='submit' class='menu_item' value='Login')
    <br/>
    a(href="/" class="menu_item") Back
    <br/>
    a(href="/create" class='menu_item') Create Account
    