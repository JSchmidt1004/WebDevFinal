extends layout 

block content
    p=lastVisited
    table(class='mytable')
        tr 
            th Avatar
            th Username 
            th Email
            th Age
            th Answer 1
            th Answer 2
            th Answer 3
        tr 
            td <img src='#{user.avatar}' width=50px height=50px/>
            td=user.username
            td=user.email
            td=user.age
            td=user.answer1
            td=user.answer2
            td=user.answer3
    p
        a(href='/authenticated/edit' class='menu_item') Edit Account
    p
        a(href='/logout' class='menu_item menu_item_small') Log Out